# Hyperspace Replicas

<% if @hyperspace_servers.empty? %>
Hyperspace.Replica.Host=<% node[:fqdn] %>
<% else %>
<% @hyperspace_servers.each do |node| %>
Hyperspace.Replica.Host=<%= node[:fqdn] %>
<% end %>
<% end %>

# Other settings

<% @settings.keys.sort.each do |key| -%>
<%  if @settings[key].kind_of? Array -%>
<%    @settings[key].each do |item| -%>
<%=   "#{key}=#{item}"%>
<%    end -%>

<%  else -%>
<%=   "#{key}=#{@settings[key]}"%>

<%  end -%>
<% end -%>



